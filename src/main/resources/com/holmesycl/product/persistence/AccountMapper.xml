<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.holmesycl.product.persistence.AccountMapper">

  <cache />

  <select id="getAccountByUsername" parameterType="string" resultType="Account">
    SELECT
          *
    FROM ACCOUNT
    WHERE USERNAME = #{username}
  </select>

  <select id="getAccountByUsernameAndPassword" parameterType="Account" resultType="Account">
    SELECT
      	  *
    FROM ACCOUNT
    WHERE USERNAME = #{username}
      AND PASSWORD = #{password}
  </select>


  <insert id="insertAccount" parameterType="Account">
    INSERT INTO ACCOUNT
      (USERNAME,PASSWORD,EMAIL)
    VALUES
      (#{username}, #{password}, #{email})
  </insert>

</mapper>